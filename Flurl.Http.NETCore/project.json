{
  "version": "1.0.0-beta",
  "title": "Flurl.Http.NETCore",
  "description": "A fluent, portable, testable HTTP client library that extends Flurl's URL builder chain.",
  "authors": [ "Todd Menier" ],
  "tags": [ "httpclient rest json http fluent portable url uri tdd assert async" ],
  "projectUrl": "http://tmenier.github.io/Flurl",
  "iconUrl": "https://pbs.twimg.com/profile_images/534024476296376320/IuPGZ_bX_400x400.png",
  "licenseUrl": "https://raw.githubusercontent.com/tmenier/Flurl/master/LICENSE",
  "requireLicenseAcceptance": false,
  "releaseNotes": "1.0.0-beta - Added Flurl.Http port to NETCore",
  "repository": {
    "type": "git",
    "url": "https://github.com/tmenier/Flurl.git"
  },

  "dependencies": {
    "Microsoft.Bcl.Async": "1.0.168",
    "Newtonsoft.Json": "8.0.3"
  },

  "compile": [ "../Flurl.Http.Shared/**/*.cs", "../Flurl/**/*.cs" ],
  "compileExclude": [ "../**/AssemblyInfo.cs", "../Flurl/Util/CommonExtensions.cs" ],

  "frameworks": {
    "net45": {
      "frameworkAssemblies": {
        "System.Net.Http": "4.0.0.0"
      }
    },
    "net46": {
      "frameworkAssemblies": {
        "System.Net.Http": "4.0.0.0"
      }
    },
    "dotnet5.4": {
      "dependencies": {
        "System.Dynamic.Runtime": "4.0.11-beta-23516",
        "System.IO.FileSystem": "4.0.1-beta-23516",
        "System.Linq": "4.0.1-beta-23516",
        "System.Net.Http": "4.0.1-beta-23516",
        "System.Reflection.TypeExtensions": "4.1.0-beta-23516",
        "System.Text.RegularExpressions": "4.0.11-beta-23516"
      }
    }
  }
}
